<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/phosphor-icons"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;500;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                fontFamily: {
                    'display': ['Roboto Slab', 'ui-serif']
                }
            }
        }
    </script>
    <title>@ViewData["Title"] - GoBarber</title>
</head>
<body class="bg-zinc-700 mx-auto h-screen">
    <header class="w-screen bg-zinc-800">
        <div class="flex justify-between items-center py-4 w-[80%] mx-auto">
            <img class="w-[137px]" src="/assets/logo.png" alt="Go Barber">
            <a class="flex items-center gap-2 text-white px-4 py-2 rounded-md text-xl bg-zinc-900 hover:bg-zinc-700 transition duration-300 cursor-pointer" asp-controller="Home" asp-action="Index">
                <i class="ph-sign-out text-2xl"></i>
                <span>Sair</span>
            </a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>
